<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
             >

        <TextView
            android:id="@+id/numberInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

        <Button
            android:id="@+id/num1Input"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="1"
                android:layout_weight="1">
        </Button>

        <Button
            android:id="@+id/num2Input"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="2"
                android:layout_weight="1">
        </Button>

        <Button
            android:id="@+id/num3Input"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="3"
                android:layout_weight="1">
        </Button>

        <Button
                android:id="@+id/PlusInput"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="+/-"
                android:layout_weight="1">
        </Button>
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
        <Button
                android:id="@+id/num4Input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="4" >
        </Button>

        <Button
                android:id="@+id/num5Input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="5" >
        </Button>

        <Button
                android:id="@+id/num6Input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="6" >
        </Button>
        <Button
                android:id="@+id/MultiInput"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="*/:" >
        </Button>
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

        <Button
                android:id="@+id/num7Input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="7" >
        </Button>

        <Button
                android:id="@+id/num8Input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="8" >
        </Button>

        <Button
            android:id="@+id/num9Input"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="9" >
    </Button>
        <Button
                android:id="@+id/num0Input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="0" >
        </Button>
    </LinearLayout>

    <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
           >
        <Button
                android:id="@+id/ClearInput"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Clear" >
        </Button>
        </LinearLayout>

</LinearLayout>